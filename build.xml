<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="zip" name="Create Runnable Jar for Project ACCUWeatherSnarl">
  	
	<target name="init">
		<delete><fileset dir="./dist" includes="**/*"/>
	</delete>
		<mkdir dir="./comp" />
	</target>
	<target name="cleanup">
		<delete dir="./comp" />	
	</target>

	<target name="compile" depends="init">
		<javac srcdir="./src" destdir="./comp"  classpath="./lib/libgrowl.jar;./lib/Snarl4Java-0.1.1.jar;./lib/SnarlNetworkeBridge.jar" >
		</javac>
	</target>

	<target name="jar" depends="compile,copyfiles">
		<jar destfile="./dist/JWeatherWatch.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="net.Main" />
				<attribute name="Class-Path" value=". ./lib/Snarl4Java-0.1.1.jar ./lib/libgrowl.jar ./lib/SnarlNetworkeBridge.jar" />
			</manifest>
			<fileset dir="./comp" />
			<fileset dir="./data"/>
		</jar>
		<antcall target="cleanup"></antcall>
	</target>

	<target name="copyfiles">
		<copy todir="./dist/iconset">
			<fileset dir="iconset" />
		</copy>
		<copy file="./build/jWeatherWatch.exe" tofile="./dist/jWeatherWatch.exe"/>
		<copy todir="./dist/lib">
			<fileset dir="lib" />
		</copy>
	</target>
	
	<target name="getVersion">
			<java jar="./dist/JWeatherwatch.jar"  fork="true" outputproperty="version">		
			 <arg value="-version"/>				
		</java>
		<echo>${version}</echo>
		</target>

	<target name="zip" depends="jar,copyfiles,getVersion">
		<zip destfile="./dist/${version}.zip" basedir="./dist" ></zip>		
	</target>


	<target name="doc">
		<javadoc  sourcepath="src" defaultexcludes="yes" destdir="./javadoc/" author="true" version="true" use="true" windowtitle="jWeatherWatch">
		</javadoc>
	</target>
	
	

</project>
