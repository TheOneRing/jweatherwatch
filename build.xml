<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project ACCUWeatherSnarl">
	<target name="create_run_jar">
		<delete dir="./dist" />
		<mkdir dir="./dist" />
		<jar destfile="./dist/JWeatherWatch.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="gui.Gui" />
				<attribute name="Class-Path" value="." />
			</manifest>
			<fileset dir="./bin" />
		</jar>
		<copy todir="./dist/iconset">
			<fileset dir="iconset" />
		</copy>

		<copy todir="./dist/lib">
			<fileset dir="lib" />
		</copy>
		
		<tar destfile="./dist/jWeatherWatcher.tar" basedir="./dist"/>
		<gzip src="./dist/jWeatherWatcher.tar" destfile="./dist/jWeatherWatcher.tar.gz"/>
		<delete file="./dist/jWeatherWatcher.tar"/>
	</target>
</project>
