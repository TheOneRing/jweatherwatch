<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="makeTar" name="Create Runnable Jar for Project ACCUWeatherSnarl">

	<target name="init">
		<delete dir="./dist" />
		<mkdir dir="./dist" />
		<mkdir dir="./comp" />
	</target>
	<target name="cleanup">
		<delete dir="./comp" />	
	</target>

	<target name="compile" depends="init">
		<javac srcdir="./src" destdir="./comp"  classpath="./lib/libgrowl.jar;./lib/Snarl4Java-0.1.1.jar;./lib/SnarlNetworkeBridge.jar" >
		</javac>
	</target>

	<target name="create_run_jar" depends="compile">
		<jar destfile="./dist/JWeatherWatch.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="gui.Gui" />
				<attribute name="Class-Path" value=". ./lib/Snarl4Java-0.1.1.jar ./lib/libgrowl.jar ./lib/SnarlNetworkeBridge.jar" />
			</manifest>
			<fileset dir="./comp" />
			<fileset dir="./data"/>
		</jar>
		<antcall target="cleanup"></antcall>
	</target>

	<target name="copyfiles">
		<copy todir="./dist/iconset">
			<fileset dir="iconset" />
		</copy>
		<copy todir="./dist/lib">
			<fileset dir="lib" />
		</copy>
	</target>

	<target name="makeTar" depends="create_run_jar,copyfiles">
		<tar destfile="./dist/jWeatherWatch.tar" basedir="./dist" />
		<gzip src="./dist/jWeatherWatch.tar" destfile="./dist/jWeatherWatch.tar.gz" />
		<delete file="./dist/jWeatherWatch.tar" />
		
	</target>


	<target name="doc">
		<javadoc  sourcepath="src" defaultexcludes="yes" destdir="./javadoc/" author="true" version="true" use="true" windowtitle="jWeatherWatch">
		</javadoc>
	</target>

</project>
